<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.orderingsystem.recipe.mapper.FoodClassMapper">

    <select id="getClassById" resultType="com.example.orderingsystem.recipe.po.FoodClass">
        select * from food_class where class_id  = #{id}
    </select>
    <select id="getFoodClassList" resultType="com.example.orderingsystem.recipe.po.FoodClass">
        select * from food_class
    </select>
</mapper>
